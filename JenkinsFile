pipeline {
    agent any
    stages {
        stage('Checkout git') {
            steps {
               git branch: 'main', url: 'https://github.com/nigelbrennan/CICDproject.git'
            }
        }
        
        stage ('Build & JUnit Test') {
            steps {
                 bat "mvn clean compile"
            }
            post {
               success {
                    junit 'target/surefire-reports/**/*.xml'
                }   
            }
        }
 
    }
}


